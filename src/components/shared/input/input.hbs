<div class="input">
    <label 
    for="{{inputId}}" 
    class="input__label">
    {{label}}
    </label>
    <input 
    type="{{inputType}}" 
    id="{{inputId}}" 
    name="{{inputName}}" 
    class="input__element" 
    placeholder="{{placeholder}}">
    <div class="input__text">{{inputText}}</div>
</div>