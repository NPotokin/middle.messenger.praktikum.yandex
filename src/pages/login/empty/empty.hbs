<div class="login">
    <div class="login__modal">
        <h1 class="login__title">Вход</h1>
        <form 
        action="{{formAction}}" 
        class="login__form">
            {{> Input 
            inputId="login" inputType="text" inputName="login" 
            label="Логин" placeholder="" inputText=""
            }}
            {{> Input 
            inputId="password" inputType="password" inputName="password" 
            label="Пароль" placeholder="" inputText=""
            }}
            {{> Button buttonClass="primary" buttonText="Авторизоваться"}}
            {{> Button buttonClass="link" buttonText="Нет аккаунта?"}}
        </form>
    </div>
</div>
