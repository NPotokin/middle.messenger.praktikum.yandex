<div class="profile">
    <div class="profile__buttonArea">
        {{> Arrow src="/icons/arrow-left.svg"}}
    </div>
    <div class="profile__main">
        <div class="profileContainer">
            {{> Image imgSize="40px" contSize="__128" imgSrc="/icons/image.svg"}}
            <div class="profile__info">
                {{> UserInput inputId="email" inputName="email" label="Почта" inputType="email" inputValue="pochta@yandex.ru" userInputContainerClass="loginChange"}}
                {{> UserInput inputId="login" inputName="login" label="Логин" inputType="text" inputValue="ivanivanov"}}
                {{> UserInput inputId="first_name" inputName="first_name" label="Имя" inputType="text" inputValue="Иван"}}
                {{> UserInput inputId="second_name" inputName="second_name" label="Фамилия" inputType="text" inputValue="Иванов"}}
                {{> UserInput inputId="display_name" inputName="display_name" label="Имя в чате" inputType="text" inputValue="Иван"}}
                {{> UserInput inputId="phone" inputName="phone" label="Телефон" inputType="tel" inputValue="+7 (909) 967 30 30"}}
            </div>
            {{> Button buttonClass="primary--user" buttonText="Сохранить"}}
        </div>
    </div>
</div>
