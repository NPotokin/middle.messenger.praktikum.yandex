<div class="signin">
    <div class="signin__modal">
        <h1 class="signin__title">Регистрация</h1>
        <form 
        action="{{formAction}}" 
        class="signin__form">
            {{> Input 
                inputId="email" inputType="text" inputName="email" inputValue="pochta@yandex.ru"
                label="Почта" placeholder="" inputText="" 
            }}
            {{> Input 
                inputId="login" inputType="text" inputName="login" 
                inputValue="ivanivanov"
                label="Логин" placeholder="" inputText="" 
            }}
            {{> Input 
                inputId="first_name" inputType="text" inputName="first_name" 
                inputValue="Иван"
                label="Имя" placeholder="" inputText="" 
            }}
            {{> Input 
                inputId="second_name" inputType="text" inputName="second_name" 
                inputValue="Иванов"
                label="Фамилия" placeholder="" inputText="" 
            }}
            {{> Input 
                inputId="phone" inputType="tel" inputName="phone" 
                inputValue="+7 (909) 967 30 30"
                label="Телефон" placeholder="" inputText="" 
            }}
            {{> Input 
                inputId="password" inputType="password" inputName="password" 
                inputValue="whatever" modifier="input__text--error"
                label="Пароль" placeholder="" inputText="" 
            }}
            {{> Input 
                inputId="passwordVCheck" inputType="password" inputName="password" 
                inputValue="whatever" modifier="input__text--error"
                label="Пароль (ещё раз)" placeholder="" inputText="Пароли не совпадают" 
            }}
            {{> Button buttonClass="primary" buttonText="Зарегистрироваться"}}
            {{> Button buttonClass="link" buttonText="Войти"}}
        </form>
    </div>
</div>
